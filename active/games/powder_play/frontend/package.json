{
  "name": "powder_play",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:e2e": "playwright test --config=playwright.config.ts",
    "materials:sync": "node ../scripts/sync_materials.js",
    "materials:sync:watch": "node ../scripts/sync_materials.js --watch",
    "dev:all": "concurrently \"npm run materials:sync:watch\" \"vite\""
  },
  "vitest": {
    "include": [
      "tests/**/*.test.ts",
      "**/*.test.ts"
    ],
    "exclude": [
      "**/tests/playwright/**",
      "**/e2e/**"
    ]
  },
  "dependencies": {
    "ajv": "^8.12.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@tailwindcss/postcss": "^4.1.18",
    "autoprefixer": "^10.4.23",
    "concurrently": "^8.0.0",
    "esbuild": "^0.18.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
